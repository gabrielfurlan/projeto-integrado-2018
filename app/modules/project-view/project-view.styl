@import '../../stylesheets/settings/colors'

.project-view 
	display grid
	width 100%
	grid-template-columns 55px auto
	grid-template-rows calc(100vh - 3px)
	border-top solid 3px $blue 
			
	> .content
		padding 40px 80px
		overflow auto	
		height calc(100vh - 3px)
		
		&:after 
			content ''
			display block
			height 40px
		
		.subtitle
			display block
			font-size 1em
			font-weight 700
			width 100%
			padding-bottom 30px
				
		> .title
			font-size 1.4em
			font-weight 400
			margin-bottom 30px
			color $gray
			
			> a
				color $blue
				padding-right 10px
				
				& + a 
					padding-left 10px
					
			> .project-name
				display inline
				color $text-color
				padding 10px
				
				> .code
					margin-left 3px
					margin-bottom 60px
					font-size 1em			
					color $gray
					text-transform uppercase
					font-style italic
		
		> .project-view-header
			margin-bottom 30px
			text-align right
			
			> .slim-button
				display inline-block
				width auto
				height auto
				padding 0
				
				> img
					padding 5px
					width 40px
					
		> .description
			font-size 1em
			line-height 1.4em
			color $gray
			margin-bottom 30px
					
		> .kanban
			display grid
			width 100%
			grid-gap 30px
			grid-template-columns 1fr 1fr 1fr
			grid-template-rows 100vh
					
			> .state 
				> .title
					text-align center
					padding 15px
					font-weight 400
					background-color rgba($gray, .4)
					border-radius 5px 5px 0px 0px
					font-size 1em
					
				> .list
					background-color rgba($gray, .4)
					width 100%
					height 100%	
					border-radius 0px 0px 5px 5px
					padding 15px								
					
		