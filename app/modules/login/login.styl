@import '../../stylesheets/settings/colors'

.login
	display grid
	width 100%
	grid-template-columns 500px auto
	grid-template-rows 100vh
	
	> section.aprensentation	
		position relative
		
		&:after
			content ''
			display block
			position absolute
			width 100%
			height 100%
			left 0
			top 0
			transition-duration .5s
			background-size 110%
			background-repeat no-repeat 
			background-image url('/imgs/login-background-2.png')
			opacity .1
			
		&.-valided
			&:after
				background-color transparent
							
	> .content
		> form.form
			height 100%
			display flex
			flex-direction column
			justify-content center
			position relative
			padding 45px 60px 
			z-index 1
			
			&.-hide
				display none
				animation hiding .5s
			
			&.-show 
				animation showing .5s

			> .title
				font-size 2.4em
				font-weight 400
				margin-bottom 15px
				
			> .description
				font-weight 400
				font-size 1em
				line-height 1.2em
				
				> a
					color $orange

			> fieldset
				margin-top 45px
				white-space nowrap
						
				> .input
					display inline-block
					width 100%
					height 55px
					vertical-align bottom
				
				> .error
					margin-top 15px
					color $red
					font-size 1em				

				> .slim-button
					display block
					width 160px
					height 55px
					margin-top 30px
					font-size 1em
					text-transform uppercase 
						
					&:hover
						> .loading
							stroke white
											
					> .loading
						width 50px
						height 50px
						


@keyframes showing
	from
		opacity 0
	
	to 
		opacity 1
	

@keyframes hiding
	0%
		display block
		opacity 1
	
	99%
		opacity 0
	
	100%
		display none	