.task > .content
	> .info-bar
		width calc(50% - 30px)
		display inline-block
		margin-top 60px
		
		> .input-group
			> .label 
				width 100%
				height 40px
				display flex
				justify-content space-between
				align-items center
					
			& + .input-group
				margin-top 30px
		
		> .input-group.status-group					
			> .select
				width 160px
				
		> .log-time
			> .label
				span
					width 100%
					display flex
					justify-content space-between
					align-items center
					
					> img
						width 40px
						cursor pointer
						
			> .value
				font-style italic
		
		> .priority
			> img
				width 30px
				vertical-align middle
				margin-right 10px
				