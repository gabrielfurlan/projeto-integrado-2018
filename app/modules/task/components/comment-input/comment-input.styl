@import '../../../../stylesheets/settings/colors'

.comment-input
	display grid
	grid-template-columns 60px auto
	margin-top 45px
	align-items flex-end
	
	> .avatar-wrapper
		padding-right 10px
		
		> svg 
			width 100%
			height auto

	> .content	
		> .comment-header
			margin-bottom 15px
	
			> .name
				display inline-block
				font-size 1em
		
		> .input-wrapper				
			background-color white
			border-radius 50px 
			box-shadow 0px 1px 4px 0px rgba(black, .1)
	
			> .text-area
				width calc(100% - 50px)
				height 50px
				resize none
				border none
				overflow hidden
				padding-top 12px
				padding-bottom 12px
				padding-left 20px
				
				background-color transparent
				display inline-block
				
				&:focues
					outline none
				
			> .actions
				width 50px
				height 50px
				display inline-flex
				align-items center
				justify-content center
				text-align right
				vertical-align top
				> .send
					width 100%
					height 100%
					padding 12px
					cursor pointer
					