@import '../../stylesheets/settings/colors'

.task 
	display grid
	width 100%
	grid-template-columns 200px auto
	grid-template-rows calc(100vh - 3px)
			
	> .content
		padding 40px 80px
		overflow auto	
		height calc(100vh - 3px)
		
		&:after 
			content ''
			display block
			height 40px
		
		.subtitle
			display block
			font-size 1em
			font-weight 700
			width 100%
			padding-bottom 30px
				
		> .title
			font-size 1.4em
			font-weight 400
			margin-bottom 30px
			color $gray
			
			> a
				color $gray
				padding-right 10px
				
				& + a 
					padding-left 10px
					
			> .task-name
				display inline
				color $text-color
				padding 10px
				
				> .code
					margin-left 3px
					margin-bottom 60px
					font-size 1em			
					color $gray
					text-transform uppercase
					font-style italic
					
		> .description
			font-size 1em
			line-height 1.4em
			color $gray
			
		> .files
			margin-top 30px
			
			> .uploader
				margin-bottom 15px
				> input 
					display none
					
				> label
					display inline-block					
					color $gray
					cursor pointer
					
					
					> img
						width 30px
						vertical-align middle
						margin-right 10px
				
				&:hover
					color $blue
					
			> .file-list
				> .not-found
					font-size .9em
					color $gray
							
		> .comments
			width calc(50% - 30px)
			display inline-block
			margin-top 60px
			vertical-align top
			margin-right 60px

			> .subtitle
				padding-bottom 45px
			
			> .list				
				> .comment-card
					display grid
					grid-template-columns 60px auto
					
					& + .comment-card
						margin-top 45px
						
					> .avatar-wrapper
						padding-right 15px
						> svg 
							width 100%
							height auto
			
					> .content
						> .file-list
							margin-top 15px
							> .file
								border-radius 30px
								margin-bottom 10px
								padding 10px
								display inline-block
								border solid 1px $gray
								margin-right 10px
								font-size .8em
								
						> .comment-header
							margin-bottom 15px
							> .name
								display inline-block
								font-size 1em
								
							> .created-at
								color $gray
								margin-left 15px
								
						> .text
							width 100%
							line-height 1.4em			
											
	> .add-log-time-modal
		> .modal
			
			> .title
				font-size 1.2em
				margin-bottom 45px
				
			> .input-group.time-group
				width calc(50% - 5px)
				display inline-block
				
				& + .input-group
					margin-left 10px
					
				> .input
					width 100%
					
			> .actions
				width 100%
				margin-top 45px
				
				> .save-action
					width 100px
