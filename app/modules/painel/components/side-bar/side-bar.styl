@import '../../../../stylesheets/settings/colors.styl'

.side-bar
	border-radius 4px	
	text-align center 
	padding-top 45px
	padding-bottom 30px
	position sticky
		
	> img.logo
		width 45px
		padding-bottom 30px
		border-bottom solid 1px rgba($gray, .3)

	> .navigation
		margin-top 60px
		
		> a.link
			display block
			text-align left
			color $text-color
			padding	15px 0px 15px 20px
			font-size 1em
			
			&.active
				box-shadow 3px 0px 0px 0px $green-hover inset
				color $green-hover
				background-color rgba($green-hover, .1)
				
			&:hover
				color $green-hover
				
			> img
				width 20px
				vertical-align middle
				margin-right 10px
				
			
			& + a.link
				margin-top 5px