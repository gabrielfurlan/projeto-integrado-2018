@import '../../../stylesheets/settings/colors'

.select
	position relative
	height 40px
	background-color transparent
	border solid 1px $gray
	cursor pointer 
	border-radius 4px
	
	&.-white
		box-shadow 0px 0px 2px 0px rgba(black, .2)  
		background-color white
		border none
					
	> label
		display inline-block
		padding 12px 10px
		width calc(100% - 30px);
		height 100%
		cursor pointer
		use-select none
		
		> span 
			> img 
				width 20px
				vertical-align middle
				margin-right 10px 
		
		
		> .placeholder
			color $gray
				
	> .icon
		width 30px
		vertical-align middle
		use-select none
		
	> .select-dropdown
		display none
		position absolute
		width 100%
		max-height 120px
		overflow-y auto
		background-color white
		margin-top 15px
		box-shadow 0px 1px 2px 1px rgba(black, .1)		
		z-index 99
		
		&.-show
			display block
			
		> li
			padding 12px 7px
			
			&:hover
				background-color $light-gray
				
			> span 
				> img 
					width 20px
					vertical-align middle
					margin-right 10px 
			
				

	&.-disabled
		background-color $light-gray
		cursor not-allowed