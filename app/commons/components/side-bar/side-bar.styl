@import '../../../stylesheets/settings/colors.styl'

.side-bar
	border-radius 4px	
	text-align center 
	padding-top 45px
	padding-bottom 30px
	position sticky
	background-color white
	box-shadow 0px 1px 4px 0px rgba(black, .1)		
	
	> .user-info
		width 100% 
		text-align center
		margin-top 60px
		
		> .avatar
			display block
			margin-bottom 15px
			
			> svg
				width 80px
				height 80px
				
		> .name
			color $gray
			font-weight 500

		> .role 
			display block
			color $orange
			margin-top 15px
			
				
	> img.logo
		width 35px
		padding-bottom 45px
		border-bottom solid 1px rgba($gray, .3)

	> .navigation
		margin-top 60px
		text-align left 
				
		> a.link
			display block
			color $gray
			padding	10px 15px 
			font-size 1em
			
			&.active
				box-shadow 3px 0px 0px 0px $orange inset
				color black
				font-weight 500
				
			&.-logout
				cursor pointer
				box-shadow 3px 0px 0px 0px $red inset
				
			> img
				vertical-align middle
				margin-right 10px
				display inline-block
				width 20px			
			
			& + a.link
				margin-top 5px