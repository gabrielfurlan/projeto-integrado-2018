@import '../../../stylesheets/settings/colors.styl'

.side-bar
	border-radius 4px	
	text-align center 
	padding-top 45px
	padding-bottom 30px
	position sticky
	background-color white
	box-shadow 0px 1px 4px 0px rgba(black, .1)		
	 
	
	> img.logo
		width 35px
		padding-bottom 45px
		border-bottom solid 1px rgba($gray, .3)

	> .navigation
		margin-top 45px
		
		> a.link
			display block
			text-align center
			color $text-color
			padding	15px 
			font-size 1em
			
			&.active
				box-shadow 3px 0px 0px 0px $blue-hover inset
				color $blue-hover
				background-color rgba($blue-hover, .1)
				
			&:hover
				color $blue-hover
				
			> img
				vertical-align middle
				margin-right 10px
				display inline-block
				width 100%			
			
			& + a.link
				margin-top 5px