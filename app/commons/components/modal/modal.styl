@import '../../../stylesheets/settings/colors.styl'

.modal-wrapper
	position fixed 
	width 100%
	height 100vh
	background-color rgba(black, .8)
	padding 60px
	
	&.-hide
		display none
	
	> .modal
		width 100%
		margin-left auto
		margin-right auto
		max-width 768px 
		background-color $light-gray 
		border-radius 4px
		animation show
		animation-duration .2s
		will-change transform 
		padding 30px
		
@keyframes show
	from
		transform translateY(-100%)
	to
		transform translateY(0)
		