@import '../../../stylesheets/settings/colors.styl'

.plus-button
	display block
	width 100px
	height 45px
	color white
	background-color $gray
	border-radius 4px
	cursor pointer
	transition-duration .5s
	border-radius 40px
	box-shadow 0px 1px 4px 0px rgba(black, .1)		
	
	> span
		vertical-align middle

	> span.plus
		display inline-block
		margin-left 10px
		font-size 2em 
		
	&.-green
		background-color $green
	
		&:hover
			background-color $green-hover
			
	&.-orange
		background-color $orange
	
		&:hover
			background-color $orange-hover