@import '../../../stylesheets/settings/colors.styl'

.slim-button
	display block
	height 40px
	color $gray
	border solid 1px $gray
	background-color transparent
	border-radius 4px
	cursor pointer
	transition-duration .5s
	width 100px
	&:hover
		background-color $gray
		color white	
		
	&.-green
		color $green 
		border solid 1px $green 
		 
		&:hover
			background-color $green
			color white
		
			
	&.-purple
		color $purple
		border solid 1px $purple
		 
		&:hover
			background-color $purple
			color white
					